<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 text-center">
      <h4><small>Now Playing for <%= @spotify_user.display_name %></small></h4>
      <hr/>
      <% if @spotify_track %>
      <div class="text-center">
        <%= image_tag @spotify_track.album.images.first["url"], class: 'img-circle', style: 'max-height: 300px;'  %>
      </div>
      <h5><%= @spotify_track.name %></h5>
      <h5><%= @spotify_track.artists.first.name %></h5>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
      <hr/>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Your Spotify Playlists</h3>
        </div>
        <ul class="list-group">
          <% @spotify_user.playlists.each do |playlist| %>
          <li class="list-group-item clearfix">
            <%= playlist.name %>
            <div class="pull-right">
              <% if @spotify_track %>
              <%= link_to icon('plus'), add_to_playlist_path(@user.id, playlist.id, @spotify_track.id), class: 'btn btn-primary', remote: :true %>
              <% end %>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>